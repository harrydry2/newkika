mixin footer()
  .footer__outer
    .footer
      .footer__left
        a.footer__left-logo(href="/")!=icon("KiKaLogoFooter")
        .footer__left-text fairer, faster payments
        .footer__left-icons
          a.footer__left-icons-twitter(href="https://twitter.com/kikapay" target="_blank")!=icon("twitterFooter")
          a.footer__left-icons-linkedin(href="https://www.linkedin.com/company/kikapay/" target="_blank")!=icon("linkedinFooter")

      .footer__right
        .footer__right-dual
          .footer__right-dual-header Services
          a.footer__right-dual-text(href="/") Merchants
          a.footer__right-dual-text(href="/customers") Customers
          a.footer__right-dual-text(href="/partners") Partners
          a.footer__right-dual-text(href="/about") About
          a.footer__right-dual-text(href="/#faq") FAQ's
